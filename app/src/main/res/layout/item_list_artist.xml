<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/margin_14"
    android:layout_marginEnd="@dimen/margin_14"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/idPhoto"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/margin_14"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_14"
        android:background="@color/warm_grey"
        android:layout_height="@dimen/margin_96"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/idNameItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/idPhoto"
        android:layout_alignBottom="@+id/idPhoto"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/margin_14"
        android:textSize="@dimen/margin_16"
        android:maxLines="2"
        android:textAlignment="center"
        android:fontFamily="@font/gotham_medium"
        android:layout_above="@id/idPhoto"
        android:background="@color/opacity_light_grey"
        android:textColor="@color/black" />

</RelativeLayout>